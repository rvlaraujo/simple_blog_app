<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<% if @articles.empty? %>
  <h2>There's not Articles to show</h2>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Created By</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.body %></td>
          <td><%= article_creator(article.user) %>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Article', new_article_path %>
